{
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "types": ["vite/client"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "target": "ESNext"
  },
  "exclude": ["node_modules"],
  "include": ["src", "types", "test"]
}
